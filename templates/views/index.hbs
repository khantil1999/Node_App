{{>header}}
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header bg-dark text-center">
                    <span class="text-white font-weight-bold ">Weather</span>
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group text-info font-weight-bold">
                            <label for="location">Location</label>
                            <input class="form-control"  type="text" placeholder="location" name="location" id="location" required>
                        </div>
                        <div class="form-group text-info font-weight-bold">
                            
                            <input class="form-control btn btn-outline-success font-weight-bold"  type="button"  value="submit" onclick="getLocation()">

                        </div>
                    </form>
                </div>
                <div class="card-footer  bg-dark text-center">
                    <span class="text-white font-weight-bold" id="temp"></span>
                    <br>
                    <span class="text-white font-weight-bold" id="place"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
{{>footer}}